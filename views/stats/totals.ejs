<div class="d-flex align-items-center justify-content-center flex-wrap">
    <div class="shadow-sm bg-white rounded p-3 flex-grow-1 m-2">
        <div class="d-flex align-items-center">
            <span class="rounded-circle text-center bg-income p-1 mr-3" style="height: 35px; width: 35px;">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2.5"
                stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-up">
                <line x1="12" y1="19" x2="12" y2="5"></line><polyline points="5 12 12 5 19 12"></polyline>
                </svg>
            </span>
            <div>
                <span class="mb-2">Ingresos</span>
                <span class="d-block text-right font-weight-bold income">+ <%= incomes %> €</span>
            </div>
        </div>
    </div>

    <div class="shadow-sm bg-white rounded p-3 flex-grow-1 m-2">
        <div class="d-flex align-items-center">
            <span class="rounded-circle text-center bg-expense p-1 mr-3" style="height: 35px; width: 35px;">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2.5"
                stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-down">
                <line x1="12" y1="5" x2="12" y2="19"></line><polyline points="19 12 12 19 5 12"></polyline>
                </svg>
            </span>
            <div>
                <span class="mb-2">Gastos</span>
                <span class="d-block text-right font-weight-bold expense">- <%= expenses %> €</span>
            </div>
        </div>
    </div>

    <div class="shadow-sm bg-white rounded p-3 flex-grow-1 m-2">
        <div class="d-flex align-items-center">
            <span class="rounded-circle text-center bg-balance p-1 mr-3" style="height: 35px; width: 35px;">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2.5"
                stroke-linecap="round" stroke-linejoin="round" class="feather feather-bar-chart-2">
                <line x1="18" y1="20" x2="18" y2="10"></line><line x1="12" y1="20" x2="12" y2="4"></line><line x1="6" y1="20" x2="6" y2="14"></line>
                </svg>
            </span>
            <div>
                <span class="mb-2">Balance</span>
                <% if (balance >= 0) { %>
                    <span class="d-block text-right font-weight-bold income">+ <%= balance %> €</span>
                <% } else { %>
                    <span class="d-block text-right font-weight-bold expense">- <%= Math.abs(balance) %> €</span>
                <% } %>
            </div>
        </div>
    </div>
</div>