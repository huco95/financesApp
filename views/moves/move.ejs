<div id="<%= move._id %>"
    class="moveContainer p-2 my-1 d-flex flex-row justify-content-between rounded-pill <% if (isNew) { %> newMove <% } %>"
    data-toggle="modal" data-target="#moveModal" data-action="edit" role="button">
    
    <div class="d-flex flex-row align-items-center float-left">
        <span class="d-flex align-items-center justify-content-center rounded-circle p-1" 
         style="height: 35px; width: 35px;background-color: <%= move.category.color %>;">
            <img src="images/icons/categories/<%= move.category.icon %>.svg" alt="" width="24" height="24" title="<%= move.category.name %>">
        </span>
        <span class="pl-2 font-weight-bold">
            <%= move.category.name %>
        </span>

        <span class="mx-2">
            <%= move.description %>
        </span>
    </div>

    <div class="d-flex flew-row align-items-center float-right">
        <span
            <% if (move.type == "expense") { %>
                class="badge bg-expense">
            <% } else { %>
                class="badge bg-income">
            <% } %>
            <%= move.amount %> â‚¬ 
        </span>
    </div>
</div>